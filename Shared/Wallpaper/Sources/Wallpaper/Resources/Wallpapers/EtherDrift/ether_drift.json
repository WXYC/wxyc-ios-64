{
  "id": "ether_drift",
  "displayName": "Ether Drift",
  "version": "1.0.0",
  "renderer": {
    "type": "rawMetal",
    "shaderFile": "EtherDrift.metal",
    "vertexFunction": "fullscreenVertex",
    "fragmentFunction": "etherDriftFrag"
  },
  "parameters": [
    {
      "id": "brightness",
      "type": "float",
      "label": "Brightness",
      "default": 1.0,
      "range": { "min": 0.5, "max": 2.0 }
    },
    {
      "id": "colorBase",
      "type": "float",
      "label": "Color Base",
      "default": 1.5,
      "range": { "min": 0.5, "max": 3.0 }
    },
    {
      "id": "colorSpeed",
      "type": "float",
      "label": "Color Speed",
      "default": 0.5,
      "range": { "min": 0.1, "max": 2.0 }
    },
    {
      "id": "waveFreq",
      "type": "float",
      "label": "Wave Frequency",
      "default": 5.0,
      "range": { "min": 2.0, "max": 10.0 }
    },
    {
      "id": "waveAmp",
      "type": "float",
      "label": "Wave Amplitude",
      "default": 0.6,
      "range": { "min": 0.2, "max": 1.5 }
    },
    {
      "id": "passthrough",
      "type": "float",
      "label": "Cloud Density",
      "default": 0.2,
      "range": { "min": 0.05, "max": 0.5 }
    },
    {
      "id": "fov",
      "type": "float",
      "label": "Field of View",
      "default": 1.0,
      "range": { "min": 0.5, "max": 2.0 }
    }
  ],
  "shaderArguments": [
    { "source": "viewWidth" },
    { "source": "viewHeight" },
    { "source": "time" },
    { "source": "parameter", "id": "brightness" },
    { "source": "parameter", "id": "colorBase" },
    { "source": "parameter", "id": "colorSpeed" },
    { "source": "parameter", "id": "waveFreq" },
    { "source": "parameter", "id": "waveAmp" },
    { "source": "parameter", "id": "passthrough" },
    { "source": "parameter", "id": "fov" }
  ],
  "foreground": "light",
  "accent": {
    "hue": 200,
    "saturation": 0.6,
    "brightness": 0.9
  },
  "blurRadius": 10.0,
  "overlayOpacity": 0.15,
  "overlayIsDark": true
}
