{
  "id": "water_caustics",
  "displayName": "Water Caustics",
  "version": "1.0.0",
  "renderer": {
    "type": "stitchable",
    "shaderFile": "WaterCaustics.metal",
    "functionName": "waterCaustics"
  },
  "parameters": [
    {
      "id": "offsetX",
      "type": "float",
      "label": "X Offset",
      "default": 0.5,
      "range": { "min": 0.0, "max": 1.0 },
      "userDefaultsKey": "wallpaper.caustics.offsetX"
    },
    {
      "id": "offsetY",
      "type": "float",
      "label": "Y Offset",
      "default": 0.5,
      "range": { "min": 0.0, "max": 1.0 },
      "userDefaultsKey": "wallpaper.caustics.offsetY"
    }
  ],
  "shaderArguments": [
    { "source": "viewSize" },
    { "source": "time" },
    { "source": "parameter", "id": "offsetX" },
    { "source": "parameter", "id": "offsetY" }
  ]
}
