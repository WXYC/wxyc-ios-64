{
  "id": "chroma_wave",
  "displayName": "Chroma Wave",
  "version": "1.0.0",
  "renderer": {
    "type": "stitchable",
    "shaderFile": "ChromaWave.metal",
    "functionName": "chromaWave",
    "fragmentFunction": "chromaWaveFrag"
  },
  "parameters": [
    {
      "id": "highlightCompression",
      "type": "float",
      "label": "Highlight Compression",
      "default": 0.0,
      "range": { "min": 0.0, "max": 2.0 }
    }
  ],
  "shaderArguments": [
    { "source": "viewWidth" },
    { "source": "viewHeight" },
    { "source": "time" },
    { "source": "parameter", "id": "highlightCompression" }
  ],
  "foreground": "dark",
  "accent": {
    "hue": 23,
    "saturation": 0.75
  },
  "blurRadius": 8.0,
  "overlayOpacity": 0.1,
  "overlayIsDark": true
}
