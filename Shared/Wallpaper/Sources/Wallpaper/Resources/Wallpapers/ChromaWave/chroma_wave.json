{
  "id": "chroma_wave",
  "displayName": "Chroma Wave",
  "version": "1.0.0",
  "renderer": {
    "type": "stitchable",
    "shaderFile": "ChromaWave.metal",
    "functionName": "chromaWave",
    "fragmentFunction": "chromaWaveFrag"
  },
  "parameters": [
    {
      "id": "highlightCompression",
      "type": "float",
      "label": "Highlight Compression",
      "default": 0.0,
      "range": { "min": 0.0, "max": 2.0 }
    },
    {
      "id": "waveScale",
      "type": "float",
      "label": "Wave Scale",
      "default": 20.0,
      "range": { "min": 5.0, "max": 50.0 }
    },
    {
      "id": "iterationDivisor",
      "type": "float",
      "label": "Iteration Divisor",
      "default": 1.70,
      "range": { "min": 1.2, "max": 2.5 }
    },
    {
      "id": "colorEnhancement",
      "type": "float",
      "label": "Color Enhancement",
      "default": 0.2,
      "range": { "min": 0.0, "max": 0.5 }
    },
    {
      "id": "timeSpeed",
      "type": "float",
      "label": "Time Speed",
      "default": 32.0,
      "range": { "min": 16.0, "max": 64.0 }
    }
  ],
  "shaderArguments": [
    { "source": "viewWidth" },
    { "source": "viewHeight" },
    { "source": "time" },
    { "source": "parameter", "id": "highlightCompression" },
    { "source": "parameter", "id": "waveScale" },
    { "source": "parameter", "id": "iterationDivisor" },
    { "source": "parameter", "id": "colorEnhancement" },
    { "source": "parameter", "id": "timeSpeed" }
  ],
  "foreground": "dark",
  "accent": {
    "hue": 23,
    "saturation": 0.75,
    "brightness": 1.0
  },
  "blurRadius": 8.0,
  "overlayOpacity": 0.1,
  "overlayIsDark": true
}
