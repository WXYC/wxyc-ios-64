{
  "id": "neon_topology_iso",
  "displayName": "Space Mountain",
  "version": "1.0.0",
  "renderer": {
    "type": "stitchable",
    "shaderFile": "NeonTopologyIso.metal",
    "functionName": "neonTopologyIso",
    "fragmentFunction": "neonTopologyIsoFrag"
  },
  "parameters": [
    {
      "id": "bandCount",
      "type": "float",
      "label": "Band Count",
      "default": 10.0,
      "range": { "min": 5.0, "max": 20.0 }
    },
    {
      "id": "lineWidthScale",
      "type": "float",
      "label": "Line Width",
      "default": 1.25,
      "range": { "min": 0.5, "max": 3.0 }
    },
    {
      "id": "glowBrightness",
      "type": "float",
      "label": "Glow Brightness",
      "default": 0.5,
      "range": { "min": 0.0, "max": 2.0 }
    },
    {
      "id": "targetHue",
      "type": "float",
      "label": "Target Hue",
      "default": 0.7,
      "range": { "min": 0.0, "max": 1.0 }
    },
    {
      "id": "hueRange",
      "type": "float",
      "label": "Hue Range",
      "default": 0.3,
      "range": { "min": 0.1, "max": 0.5 }
    },
    {
      "id": "noiseFrequency",
      "type": "float",
      "label": "Noise Frequency",
      "default": 5.0,
      "range": { "min": 2.0, "max": 10.0 }
    },
    {
      "id": "timeSpeed",
      "type": "float",
      "label": "Time Speed",
      "default": 0.01,
      "range": { "min": 0.005, "max": 0.05 }
    }
  ],
  "shaderArguments": [
    { "source": "viewWidth" },
    { "source": "viewHeight" },
    { "source": "time" },
    { "source": "parameter", "id": "bandCount" },
    { "source": "parameter", "id": "lineWidthScale" },
    { "source": "parameter", "id": "glowBrightness" },
    { "source": "parameter", "id": "targetHue" },
    { "source": "parameter", "id": "hueRange" },
    { "source": "parameter", "id": "noiseFrequency" },
    { "source": "parameter", "id": "timeSpeed" }
  ],
  "accent": {
    "hue": 23,
    "saturation": 0.75,
    "brightness": 1.0
  },
  "material": {
    "foreground": "dark",
    "blurRadius": 8.0,
    "overlay": {
      "opacity": 0.25,
      "darkness": 1.0
    }
  }
}
