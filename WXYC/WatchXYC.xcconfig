// WatchXYC Build Settings
// This file contains watchOS-specific build settings

// Asset Catalog
ASSETCATALOG_COMPILER_APPICON_NAME = AppIcon
ASSETCATALOG_COMPILER_GLOBAL_ACCENT_COLOR_NAME = AccentColor

// Version
CURRENT_PROJECT_VERSION = 1

// Framework Search Paths
FRAMEWORK_SEARCH_PATHS = $(inherited) $(PROJECT_DIR)/WXYC/Shared

// Info.plist
GENERATE_INFOPLIST_FILE = YES
INFOPLIST_FILE = WatchXYC-Info.plist
INFOPLIST_KEY_CFBundleDisplayName = WatchXYC
INFOPLIST_KEY_UISupportedInterfaceOrientations = UIInterfaceOrientationPortrait UIInterfaceOrientationPortraitUpsideDown
INFOPLIST_KEY_WKCompanionAppBundleIdentifier = org.wxyc.iphoneapp

// Library Search Paths
LIBRARY_SEARCH_PATHS = $(inherited)

// Linker
LD_RUNPATH_SEARCH_PATHS = $(inherited) @executable_path/Frameworks

// Marketing Version
MARKETING_VERSION = 3.0.1

// Product
PRODUCT_BUNDLE_IDENTIFIER = org.wxyc.iphoneapp.watchkitapp
PRODUCT_NAME = $(TARGET_NAME)

// Swift
SWIFT_EMIT_LOC_STRINGS = YES

// Deployment Target - watchOS 11.0 minimum (requires Apple Watch Series 6 or later)
WATCHOS_DEPLOYMENT_TARGET = 11.0

// Architectures - Use standard architectures
// watchOS 11+ only supports arm64 (Series 6+); arm64_32 (Series 3-5) and armv7k (Series 0-2) are excluded
ARCHS = $(ARCHS_STANDARD)
ONLY_ACTIVE_ARCH = NO
EXCLUDED_ARCHS[sdk=watchos*] = arm64_32 armv7k
EXCLUDED_ARCHS[sdk=watchsimulator*] = x86_64 i386

// Target Device Family
TARGETED_DEVICE_FAMILY = 4

